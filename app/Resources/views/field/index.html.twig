
{% extends 'base.html.twig' %}

{% block stylesheets %}
<link href="{{ asset('/css/style.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
    <h1>Liste des terrains</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom du terrain</th>
                <th>Type</th>
                <th>Description</th>
                <th>Location</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for field in fields %}
            <tr>
                <td><a href="{{ path('field_show', { 'id': field.id }) }}">{{ field.id }}</a></td>
                <td>{{ field.name }}</td>
                <td>{{ field.type }}</td>
                <td>{{ field.description }}</td>
                <td>{{ field.location }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('field_show', { 'id': field.id }) }}">VOIR</a>
                        </li>
                        <li>
                            <a href="{{ path('field_edit', { 'id': field.id }) }}">EDITER</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('field_new') }}">Créer une nouvelle entrée</a>
        </li>
    </ul>
{% endblock %}
